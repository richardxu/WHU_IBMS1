<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/bg_action">
    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@color/bg_action">
        <LinearLayout
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:orientation="vertical"
            android:background="@drawable/bg_back"
            android:id="@+id/layout_setting"
            android:gravity="center">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"

                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/ic_setting"/>
        </LinearLayout>
        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tx_dorm"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/tab_left_select"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:text="宿舍"/>
        <View
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:background="@color/white"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tx_stu"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/tab_middle_normal"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:text="学生"/>
        <View
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:background="@color/white"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tx_general"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/tab_right_normal"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:gravity="center"
            android:text="综合"/>
        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:orientation="vertical"
            android:background="@drawable/bg_back"
            android:id="@+id/layout_search"
            android:gravity="center">
            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"

                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/ic_search1"/>
        </LinearLayout>
    </LinearLayout>
    <!--  加载失败和正在加载 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_failure"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败，点击重新加载"
                android:textColor="@color/grey"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_loading"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载...."
                android:textColor="@color/grey"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--   下拉菜单 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/bg_action">
        <Spinner
            android:id="@+id/spinner_area"
            android:background="#00ffffff"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:layout_height="wrap_content"
            android:dropDownVerticalOffset="48dip"
            android:requiresFadingEdge="none"
            android:popupBackground="#00ffffff"
            />
        <ImageView
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#ffffffff"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"/>
        <Spinner
            android:id="@+id/spinner_building"
            android:background="#00ffffff"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:requiresFadingEdge="none"
            android:dropDownVerticalOffset="48dip"
            android:popupBackground="#00ffffff"
            />
        <ImageView
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#ffffffff"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"/>
        <Spinner
            android:id="@+id/spinner_floor"
            android:background="#00ffffff"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="48dip"
            android:popupBackground="#00ffffff"
            android:requiresFadingEdge="none"/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refreshlayout"
        >
        <android.support.v7.widget.RecyclerView
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
