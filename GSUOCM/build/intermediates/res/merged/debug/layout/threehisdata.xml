<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:clipToPadding="true"
	android:fitsSystemWindows="true"
    android:background="@color/bg_action"
    >
	<!-- 标题栏 -->
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/bg_action">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="50dip"
			android:orientation="horizontal"
			android:id="@+id/layout_back"
			android:background="@drawable/bg_back">
			<ImageView
				android:layout_width="20dip"
				android:layout_height="35dip"
				android:layout_gravity="center"
				android:paddingRight="-8dip"
				android:src="@drawable/ic_back_normal"
				android:contentDescription="返回"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="50dip"
				android:gravity="center"
				android:textSize="15sp"
				android:textColor="@color/white"
				android:layout_marginRight="8dip"
				android:text="返回"/>
		</LinearLayout>
		<TextView
			android:id="@+id/title"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:layout_height="50dip"
			android:textColor="#ffffff"
			android:textSize="18sp"
			android:gravity="center"
			android:text="电压"/>
		<View
		   android:layout_width="40dip"
		   android:layout_height="35dip"
		   android:layout_marginRight="10dip"/>
    </LinearLayout>
     
 
	<!-- 日、周、年部分 -->
	<LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="35dip"
	    android:background="@color/bg_action"
	    android:orientation="horizontal"
	    android:paddingLeft="12dip"
	    android:paddingRight="10dip"
	    android:paddingTop="5dip">
		<Button
 			android:layout_width="0dip"
		    android:layout_height="35dip"
		    android:layout_weight="1"
			android:id="@+id/bt1"
			android:textColor="@color/grey"
			android:textSize="18sp"
			android:text="日"
		    android:background="@drawable/bg_left"/>
		<View
		    android:layout_width="1dip"
		    android:layout_height="fill_parent"
		    android:background="@color/bg_action"/>
		<Button
		    android:layout_width="0dip"
		    android:layout_height="35dip"
		    android:layout_weight="1"
		    android:id="@+id/bt2"
		    android:textColor="@color/white"
			android:textSize="18sp"
		    android:text="周"
			android:background="@drawable/bg_middle_selected"/>
		<View
		    android:layout_width="1dip"
		    android:layout_height="fill_parent"
		    android:background="@color/bg_action"/>
	    <Button
		    android:layout_width="0dip"
		    android:layout_height="35dip"
		    android:layout_weight="1"
		    android:id="@+id/bt3"
		    android:textColor="@color/grey"
			android:textSize="18sp"
		    android:text="月"
		    android:background="@drawable/bg_right"/>					       	    
	</LinearLayout>
	
	 <!-- 加载中。。和加载失败 -->
	   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_loading"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center">
	        <ProgressBar
	            android:id="@+id/progressBar2"
	            style="?android:attr/progressBarStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="正在加载...."
	            android:textColor="@color/grey"
	            android:textSize="14sp"/>
        </LinearLayout>
   </LinearLayout>
   
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_failure"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="vertical">
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="加载失败，点击重新加载"
	            android:textColor="@color/grey"
	            android:textSize="14sp"/>
        </LinearLayout>
	 </LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="275dip"
		android:paddingTop="15dip"
		android:paddingRight="10dip"
		android:paddingBottom="10dip"
		android:paddingLeft="10dip"
		android:background="@color/bg_color">
		<!-- 曲线部分 -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="250dip"

			android:id="@+id/layout_graph"
			android:background="@drawable/bg_graph"
			android:orientation="vertical"
			>
		</LinearLayout>
	</LinearLayout>
	<TextView
    android:id="@+id/list_title"    
    android:layout_width="fill_parent"     
    android:layout_height="wrap_content"    
    android:paddingTop="2dip"    
    android:paddingBottom="2dip"    
    android:paddingLeft="5dip"   
    android:textSize="14sp" 
    android:textColor="@color/grey"
    android:background="@color/bg_color"
    android:text="电压" />   
	<ListView
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/list"
		android:background="@color/white"
	    android:scrollbars="none"/>
</LinearLayout>
