<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    >
	<!-- 标题栏 -->
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/bg_action">
    <ImageView
         android:layout_width="30dip"
         android:layout_height="35dip"
         android:id="@+id/back"
         android:layout_gravity="center"
         android:layout_marginLeft="10dip"
         android:src="@drawable/bg_back" 
         android:contentDescription="返回"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="50dip"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:gravity="center"
        android:text="电压"/>
    <View 
       android:layout_width="30dip"
       android:layout_height="35dip"
       android:layout_marginRight="10dip"/>
    </LinearLayout>
     
 
	<!-- 日、周、年部分 -->
	<LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="35dip"
	    android:background="@color/bg_action"
	    android:orientation="horizontal"
	    android:paddingLeft="12dip"
	    android:paddingRight="10dip"
	    android:paddingTop="5dip">
		<Button
 			android:layout_width="0dip"
		    android:layout_height="35dip"
		    android:layout_weight="1"
			android:id="@+id/bt1"
			android:textColor="@color/grey"
			android:textSize="18sp"
			android:text="日"
		    android:background="@drawable/bg_left"/>
		<View
		    android:layout_width="1dip"
		    android:layout_height="fill_parent"
		    android:background="@color/bg_action"/>
		<Button
		    android:layout_width="0dip"
		    android:layout_height="35dip"
		    android:layout_weight="1"
		    android:id="@+id/bt2"
		    android:textColor="@color/white"
			android:textSize="18sp"
		    android:text="周"
			android:background="@drawable/bg_middle_selected"/>
		<View
		    android:layout_width="1dip"
		    android:layout_height="fill_parent"
		    android:background="@color/bg_action"/>
	    <Button
		    android:layout_width="0dip"
		    android:layout_height="35dip"
		    android:layout_weight="1"
		    android:id="@+id/bt3"
		    android:textColor="@color/grey"
			android:textSize="18sp"
		    android:text="月"
		    android:background="@drawable/bg_right"/>					       	    
	</LinearLayout>
	
	 <!-- 加载中。。和加载失败 -->
	   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_loading"
        android:gravity="center"
        android:background="@color/bg_color"
		   android:visibility="gone"
        android:orientation="vertical">
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center">
	        <ProgressBar
	            android:id="@+id/progressBar2"
	            style="?android:attr/progressBarStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="正在加载...."
	            android:textColor="@color/grey"
	            android:textSize="14sp"/>
        </LinearLayout>
   </LinearLayout>
   
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_failure"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/bg_color"
        android:orientation="vertical">
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="加载失败，点击重新加载"
	            android:textColor="@color/grey"
	            android:textSize="14sp"/>
        </LinearLayout>
   </LinearLayout>
	<!-- 曲线部分 -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="250dip"
	    android:padding="5dip"
	    android:layout_margin="10dip"
	    android:id="@+id/layout_graph"
	    android:background="@drawable/bg_graph"
	    android:orientation="vertical"
	    >
	    
	</LinearLayout>
	<ListView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/list"
	    android:scrollbars="none"/>
</LinearLayout>
